<UserControl x:Class="SmartCodeLab.CustomComponents.WPFComponents.SessionNavbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCodeLab.CustomComponents.WPFComponents"
             mc:Ignorable="d" d:DesignWidth="800" Height="36">
    <UserControl.Resources>
        <SolidColorBrush x:Key="SteamDarkGray" Color="#2a2e35"/>
        <SolidColorBrush x:Key="SteamLightGray" Color="#c7d5e0"/>
        <SolidColorBrush x:Key="SteamBlue" Color="#1a9fff"/>
        <Style x:Key="SteamTopLevelItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource SteamLightGray}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid>
                            <Border x:Name="MainBorder" 
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter ContentSource="Header" 
                                                  x:Name="HeaderHost"
                                                  TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>

                            <Border x:Name="Underline"
                                    Height="2" 
                                    Background="{StaticResource SteamBlue}"
                                    VerticalAlignment="Bottom"
                                    Margin="10,0,10,0"
                                    Visibility="Collapsed"/>

                        </Grid>

                        <ControlTemplate.Triggers>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="TopLevelItem"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="HeaderHost" Property="TextBlock.Foreground" Value="{StaticResource SteamBlue}"/>
                                <Setter TargetName="Underline" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource SteamDarkGray}"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource SteamTopLevelItemStyle}"/>
        </Style>

    </UserControl.Resources>

    <Grid Height="36">
        <Menu Height="36" Padding="0,0,20,0" Margin="10,0,0,0">

            <MenuItem x:Name="nav_dashboard" Header="Dashboard" Click="nav_dashboard_Click"/>
            <MenuItem x:Name="nav_monitoring" Header="Monitoring" Click="nav_monitoring_Click"/>
            <MenuItem x:Name="nav_taskeditor" Header="Task Editor" Click="nav_taskeditor_Click"/>
            <MenuItem x:Name="nav_submission" Header="Submission" Click="nav_submission_Click"/>
            <MenuItem x:Name="nav_sessionlogs" Header="Session Logs" Click="nav_sessionlogs_Click"/>

        </Menu>
    </Grid>
</UserControl>