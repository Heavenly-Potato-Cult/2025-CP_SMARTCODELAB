<UserControl x:Class="SmartCodeLab.CustomComponents.WPFComponents.Navbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1000">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SteamBg" Color="#1B2838"/>
        <SolidColorBrush x:Key="SteamTextIdle" Color="#c5d5e0"/>
        <SolidColorBrush x:Key="SteamAccent" Color="#1ABF20"/>
        <SolidColorBrush x:Key="SteamHover" Color="#FFFFFF"/>
        <Style x:Key="SteamTabStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SteamTextIdle}"/>
            <Setter Property="FontFamily" Value="/Fonts/#Geist SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent" Height="{TemplateBinding Height}">

                            <ContentPresenter x:Name="ContentText"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0,0,0,4"/>

                            <Border x:Name="ActiveBar"
                                    Height="3"
                                    Background="{StaticResource SteamAccent}"
                                    VerticalAlignment="Bottom"
                                    Visibility="Hidden"
                                    CornerRadius="1"/>

                            <Border x:Name="HoverGlow"
                                    Background="White"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource SteamHover}"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource SteamAccent}"/>
                                <Setter TargetName="ActiveBar" Property="Visibility" Value="Visible"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#A4D007" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource SteamBg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" MinWidth="139.253"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,20,0" Height="22">
            <TextBlock Text="SMARTCODELAB" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource SteamAccent}" 
                       FontSize="16" 
                       VerticalAlignment="Center"
                       />
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Width="529">

            <RadioButton Content="SESSION" 
                         Style="{StaticResource SteamTabStyle}"
                         GroupName="MainNav"
                         IsChecked="True"
                         Click="nav_session_Click"/>

            <RadioButton Content="EXERCISE EXPLORER" 
                         Style="{StaticResource SteamTabStyle}"
                         GroupName="MainNav"
                         Click="nav_explorer_Click"/>

            <RadioButton Content="SESSION LOGS" 
                         Style="{StaticResource SteamTabStyle}"
                         GroupName="MainNav"
                         Click="nav_sessionlogs_Click"/>
            <RadioButton Content="CLASS" 
                         Style="{StaticResource SteamTabStyle}"
                         GroupName="MainNav"
                         Click="nav_class_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    Margin="20,0,20,0" 
                    VerticalAlignment="Center" Height="0"/>

        <Border Grid.ColumnSpan="3" VerticalAlignment="Bottom" Height="1" Background="#000000" Opacity="0.3"/>
    </Grid>
</UserControl>